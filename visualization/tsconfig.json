{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "removeComments": true,
        "lib": [
            "ES2020",
            "dom"
        ],
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true,
        "outDir": "dist",
        "moduleResolution": "node",
        "typeRoots": [
            "node_modules/@types"
        ],
    },
    "include": [
        "src/**/*.ts"
    ]
}